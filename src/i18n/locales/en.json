    "calculations": {
      "title": "Dashboard Calculations Explained",
      "grossProfit": {
        "title": "Gross Profit",
        "description": "Gross profit is calculated by subtracting the cost price from the selling price for each product sold, then multiplying by the quantity sold.",
        "formula": "Formula: Σ((Selling Price - Cost Price) × Quantity Sold) for each product in each sale",
        "example": "Example: If you sell 5 units of a product that costs 1000 XAF and sells for 1500 XAF: Gross Profit = (1500 - 1000) × 5 = 2500 XAF"
      },
      "netProfit": {
        "title": "Net Profit",
        "description": "Net profit is the gross profit minus all business expenses.",
        "formula": "Formula: Gross Profit - Total Expenses",
        "example": "Example: If your gross profit is 100,000 XAF and total expenses are 30,000 XAF: Net Profit = 100,000 - 30,000 = 70,000 XAF"
      },
      "totalExpenses": {
        "title": "Total Expenses",
        "description": "The sum of all business expenses across all categories.",
        "formula": "Formula: Σ(Expense Amount) for all expenses",
        "includes": "This includes all types of expenses such as: Delivery expenses, Utility bills, Rent, Other operational costs"
      },
      "totalSalesAmount": {
        "title": "Total Sales Amount",
        "description": "The total revenue from all sales, including any negotiated prices.",
        "formula": "Formula: Σ(Sale Amount) for each sale",
        "note": "Note: If a product was sold at a negotiated price, that price is used instead of the standard selling price."
      },
      "deliveryExpenses": {
        "title": "Delivery Expenses",
        "description": "The sum of all expenses categorized as 'delivery'.",
        "formula": "Formula: Σ(Expense Amount) for all expenses with category = 'delivery'"
      },
      "bestSellingProducts": {
        "title": "Best Selling Products",
        "description": "Products are ranked by the total quantity sold.",
        "formula": "For each product: Total Quantity = Σ(Quantity Sold) across all sales, Total Sales = Σ(Selling Price × Quantity Sold) across all sales",
        "note": "Products are then sorted by total quantity in descending order."
      }
    },
