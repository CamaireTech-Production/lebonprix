rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Categories images - allow authenticated users to upload to their own folder
    match /categories/{userId}/{categoryPath=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // 5MB
        && request.resource.contentType.matches('image/.*');
    }
    
    // Products images - allow authenticated users to upload to their own folder
    match /products/{userId}/{productPath=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // 5MB
        && request.resource.contentType.matches('image/.*');
    }
    
    // Fallback for other paths - general read/write for authenticated users
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024  // 5MB
        && request.resource.contentType.matches('image/.*');
    }
  }
}